# TodoIng 环境变量配置示例
# 复制此文件为 .env 并修改为你的实际配置

# ==== 基础配置 ====
APP_NAME=TodoIng
APP_VERSION=1.0.0
NODE_ENV=production

# ==== Docker 镜像配置 ====
# 设置为空则使用本地构建，设置镜像名则从远程拉取
GOLANG_BACKEND_IMAGE=axiu/todoing-go:latest
NODEJS_BACKEND_IMAGE=axiu/todoing:latest
FRONTEND_IMAGE=axiu/todoing-frontend:latest

# ==== 数据库配置 ====
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here
MONGO_DATABASE=todoing

# ==== Redis 配置 ====
REDIS_PASSWORD=your_secure_redis_password_here

# ==== JWT 配置 ====
JWT_SECRET=your_super_secret_jwt_key_change_in_production_min_32_chars
JWT_EXPIRY=24h

# ==== 功能开关 ====
DISABLE_REGISTRATION=false
ENABLE_CAPTCHA=true
ENABLE_EMAIL_VERIFICATION=true

# ==== 默认管理员账户 ====
DEFAULT_USERNAME=admin
DEFAULT_EMAIL=admin@your-domain.com
DEFAULT_PASSWORD=your_secure_admin_password

# ==== 邮件配置 ====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-app-password
EMAIL_FROM=noreply@your-domain.com

# ==== 安全配置 ====
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
RATE_LIMIT=1000
SESSION_SECRET=your_session_secret_here

# ==== 日志配置 ====
LOG_LEVEL=info
LOG_FORMAT=combined

# ==== 生产环境专用 ====
# 域名配置
DOMAIN=your-domain.com
SSL_EMAIL=admin@your-domain.com

# 监控配置
GRAFANA_PASSWORD=your_grafana_password

# ==== 开发环境专用 ====
# 调试配置
DEBUG_PORT=9229
DELVE_PORT=2345
VITE_HMR_PORT=24678

# ==== 微服务配置 ====
# Consul
CONSUL_HOST=consul
CONSUL_PORT=8500

# Kong
KONG_ADMIN_URL=http://kong:8001

# RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASS=admin123
RABBITMQ_VHOST=/

# MinIO
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=todoing-files

# ==== 第三方服务 ====
# 阿里云 OSS (可选)
ALIYUN_OSS_REGION=oss-cn-beijing
ALIYUN_OSS_BUCKET=your-bucket-name
ALIYUN_OSS_ACCESS_KEY_ID=your-access-key
ALIYUN_OSS_ACCESS_KEY_SECRET=your-secret-key

# 腾讯云 COS (可选)
TENCENT_COS_REGION=ap-beijing
TENCENT_COS_BUCKET=your-bucket-name
TENCENT_COS_SECRET_ID=your-secret-id
TENCENT_COS_SECRET_KEY=your-secret-key

# 企业微信通知 (可选)
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your-key

# 钉钉通知 (可选)
DINGTALK_WEBHOOK_URL=https://oapi.dingtalk.com/robot/send?access_token=your-token
