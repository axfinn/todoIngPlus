# TodoIng 环境变量示例 (.env.example)
# 复制为 .env 并根据需要修改，仅保留当前 Golang 单体 + 前端实际使用项

# 基础信息
APP_NAME=TodoIng
APP_VERSION=1.0.0

# 镜像 (留空可触发本地构建)
GOLANG_BACKEND_IMAGE=axiu/todoing-go:latest
FRONTEND_IMAGE=axiu/todoing-frontend:latest

# 数据库
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=change_me_mongo_root_pwd
MONGO_DATABASE=todoing

# Redis (生产可启用并在代码里添加支持后再使用)
REDIS_PASSWORD=change_me_redis_pwd

# 安全 / 鉴权
JWT_SECRET=change_me_min_32_chars_secret
JWT_EXPIRY=24h
CORS_ORIGINS=http://localhost,https://your-domain.com
RATE_LIMIT=1000

# 功能开关
DISABLE_REGISTRATION=false
ENABLE_CAPTCHA=true
ENABLE_EMAIL_VERIFICATION=true

# 默认管理员账号 (首次启动自动创建)
DEFAULT_USERNAME=admin
DEFAULT_EMAIL=admin@example.com
DEFAULT_PASSWORD=change_me_admin_pwd

# 邮件发送 (若未配置将禁用相关邮件功能)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=no-reply@example.com
EMAIL_PASS=change_me_mail_pwd
EMAIL_FROM=TodoIng <no-reply@example.com>

# 日志
LOG_LEVEL=info
LOG_FORMAT=text

# Grafana (仅在监控 profile 使用)
GRAFANA_PASSWORD=grafana_admin_pwd

# gRPC (可选)
ENABLE_GRPC=true
GRPC_PORT=9090

# 预留：前端构建时 Vite 变量 (可覆盖)
VITE_API_BASE_URL=/api
